{
  "manifest_version": 3,
  "name": "PR Diff Compare",
  "version": "1.1.0",
  "description": "Compare the diffs of 2 GitHub pull requests or Gitlab merge requests.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://gitlab.com/",
    "https://github.com/",
    "https://patch-diff.githubusercontent.com/"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
